// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  email     String  @unique
  firstname String?
  lastname  String?
  password  String?
  usertype  String?
}

model UserBackup {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  email     String
  firstname String?
  lastname  String?
  password  String?
  usertype  String?
  backupAt  DateTime @default(now())
}
